@model SmartCommuteEmmet.Models.Document

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data" class="genericForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DocumentFilePath"></label>
                <input type="file" name="DocumentFilePath" id="fileUpload" accept=".pdf" />
            </div>
            <div class="form-group">
                <label asp-for="DocumentName" class="control-label"></label>
                <input asp-for="DocumentName" placeholder="e.g. Breakfast Vouchers @DateTime.Now.Year" class="form-control" />
                <span asp-validation-for="DocumentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentDescription" class="control-label"></label>
                <input asp-for="DocumentDescription" placeholder="What should users know about this?" class="form-control" />
                <span asp-validation-for="DocumentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-main" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

