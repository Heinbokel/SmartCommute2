@model IEnumerable<SmartCommuteEmmet.Models.Commute>

@{
    ViewData["Title"] = "My Commute Log";
}

<div class="tableContainerWide">
    <h1>My Commute Log</h1>
    <p>@Model.Sum(c => c.CommuteDistance) Miles traveled over @Model.Count() commutes.</p>

    <p>
        <input type="button" class="btn-main" value="Create Commute" onclick="location.href='@Url.Action("Create", "Commutes")'" />
    </p>
    <hr />
    <table class="table" id="theTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CommuteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommuteDistance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommuteType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommuteDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommuteSaved)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CommuteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommuteDistance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommuteType.CommuteTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommuteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommuteSaved)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>