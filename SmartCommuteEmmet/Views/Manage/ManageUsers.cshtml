@model IEnumerable<SmartCommuteEmmet.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="row">
    <div class="col-md-12">
        <div class="genericSection">
            <h2>Manage Users</h2>
            <hr />
            <form asp-action="ManageUsers" class="genericForm">
                <p>Date Registered Filter:</p>
                <p>Showing from @ViewData["StartDate"] to @ViewData["EndDate"]</p>
                <label for="startDate" class="control-label">From:</label>
                <input type="date" id="startDate" name="startDate" />
                <label for="endDate" class="control-label">To:</label>
                <input type="date" id="endDate" name="endDate" />
                <input type="submit" value="Submit" class="btn-main" />
            </form>
            <hr />
            <p>Users: @Model.Count() </p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h2 class="aboutHeader">User List</h2>
        <table class="table" id="theTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserPhoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserStreet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserZIP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateRegistered)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Business.BusinessName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/@Html.DisplayFor(modelItem => item.UserPhoto)" class="thumbnailTiny" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserStreet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserCity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserZIP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRegistered)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Business.BusinessName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NormalizedEmail)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="genericSection">
            <h2 class="aboutHeader">All Email Addresses:</h2>
            <p class="aboutParagraph">
                @foreach (var item in Model)
                {
                    @item.NormalizedEmail<br />
                }
            </p>
        </div>
    </div>
</div>