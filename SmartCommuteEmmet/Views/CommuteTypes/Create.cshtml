@model SmartCommuteEmmet.Models.CommuteType

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CommuteType</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="genericForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommuteTypeName" class="control-label"></label>
                <input asp-for="CommuteTypeName" placeholder="e.g. Biking" class="form-control" />
                <span asp-validation-for="CommuteTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommutePointsAwarded" class="control-label"></label>
                <input asp-for="CommutePointsAwarded" placeholder="1-10" class="form-control" />
                <span asp-validation-for="CommutePointsAwarded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommuteTypeDescription" class="control-label"></label>
                <input asp-for="CommuteTypeDescription" placeholder="Any pedaled, non-motorized transport." class="form-control" />
                <span asp-validation-for="CommuteTypeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-main" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
