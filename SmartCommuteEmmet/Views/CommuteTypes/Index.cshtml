@model IEnumerable<SmartCommuteEmmet.Models.CommuteType>

@{
    ViewData["Title"] = "Commute Types";
}

<h2>Commute Types</h2>

<input type="button" class="btn-main" value="Create New" onclick="location.href='@Url.Action("Create", "CommuteTypes")'" />
<table class="table" id="theTable">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CommuteTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommutePointsAwarded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommuteTypeDescription)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommuteTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommutePointsAwarded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommuteTypeDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
