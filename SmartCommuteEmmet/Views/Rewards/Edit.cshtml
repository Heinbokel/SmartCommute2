@model SmartCommuteEmmet.Models.Reward

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Reward</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="genericForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RewardName" class="control-label"></label>
                <input asp-for="RewardName" placeholder="e.g. First Milestone" class="form-control" />
                <span asp-validation-for="RewardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RewardDescription" class="control-label"></label>
                <input asp-for="RewardDescription" placeholder="What is required to earn this?" class="form-control" />
                <span asp-validation-for="RewardDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredCommutes" class="control-label"></label>
                <input asp-for="RequiredCommutes" placeholder="How many commutes must be logged?" class="form-control" />
                <span asp-validation-for="RequiredCommutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredMiles" class="control-label"></label>
                <input asp-for="RequiredMiles" placeholder="How many miles must be traveled?" class="form-control" />
                <span asp-validation-for="RequiredMiles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn-main" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}