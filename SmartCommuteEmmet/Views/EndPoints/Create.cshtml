@model SmartCommuteEmmet.Models.EndPoint

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>EndPoint</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="genericForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EndPointName" class="control-label"></label>
                <input asp-for="EndPointName" placeholder="e.g. Petoskey Downtown" class="form-control" />
                <span asp-validation-for="EndPointName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndPointDescription" class="control-label"></label>
                <input asp-for="EndPointDescription" placeholder="What areas does point this include?" class="form-control" />
                <span asp-validation-for="EndPointDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndPointLongitude" class="control-label"></label>
                <input asp-for="EndPointLongitude" placeholder="e.g. 30.0000000" class="form-control" />
                <span asp-validation-for="EndPointLongitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndPointLatitude" class="control-label"></label>
                <input asp-for="EndPointLatitude" placeholder="e.g. 30.0000000" class="form-control" />
                <span asp-validation-for="EndPointLatitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-main" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}