@model IEnumerable<SmartCommuteEmmet.Models.CarouselSponsorImage>

@{
    ViewData["Title"] = "Carousel Sponsor Image";
}

<h2>Carousel Sponsor Image</h2>
<p>This image will be displayed as the home page carousel sponsors image.</p>
<hr />
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CarouselImagePath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateUploaded)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/@Html.DisplayFor(modelItem => item.CarouselImagePath)" class="img-responsive"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUploaded)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
