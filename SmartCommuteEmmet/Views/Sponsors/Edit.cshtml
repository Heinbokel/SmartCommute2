@model SmartCommuteEmmet.Models.Sponsor

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Sponsor</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data" class="genericForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SponsorImagePath"></label>
                <input type="file" name="SponsorImagePath" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
            </div>
            <div class="form-group">
                <label asp-for="SponsorName" class="control-label"></label>
                <input asp-for="SponsorName" class="form-control" />
                <span asp-validation-for="SponsorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SponsorDescription" class="control-label"></label>
                <input asp-for="SponsorDescription" class="form-control" />
                <span asp-validation-for="SponsorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SponsorLink" class="control-label"></label>
                <input asp-for="SponsorLink" class="form-control" />
                <span asp-validation-for="SponsorLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn-main" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

