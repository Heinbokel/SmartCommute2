@model IEnumerable<SmartCommuteEmmet.Models.Sponsor>

@{
    ViewData["Title"] = "Sponsors";
}

<h2>Sponsors</h2>

<input type="button" class="btn-main" value="Create New" onclick="location.href='@Url.Action("Create", "Sponsors")'" />
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SponsorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SponsorDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SponsorLink)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SponsorImagePath)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SponsorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SponsorDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SponsorLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SponsorImagePath)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
